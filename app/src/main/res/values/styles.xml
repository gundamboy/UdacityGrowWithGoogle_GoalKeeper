<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#008697</item>
    </style>

    <style name="text_small">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="text_medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="scores_identifier_text">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="scores_text">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="button_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>